{
    "name": "backend-skeleton",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "types": "./types/global.d.ts",
    "scripts": {
        "dev": "cross-env NODE_ENV=local nodemon -r ts-node/register -r tsconfig-paths/register ./src/server.ts",
        "clean": "shx rm -rf build",
        "build": "npm run clean && tsc -p tsconfig.json && tsc-alias -p tsconfig.json && shx cp -R src/assets build/src",
        "build:dev": "cross-env NODE_ENV=dev && shx cp .env.dev ./build/.env.dev",
      "build:qas": "cross-env NODE_ENV=qas npm run build",
        "build:uat": "cross-env NODE_ENV=uat && shx cp .env.uat ./build/.env.uat",
        "build:prod": "cross-env NODE_ENV=prod && shx cp .env.prod ./build/.env.prod",
        "start": "node -r tsconfig-paths/register build/src/server.js",
        "start:dev": "cross-env NODE_ENV=dev node -r tsconfig-paths/register build/src/server.js",
        "start:qas": "cross-env NODE_ENV=qas node -r tsconfig-paths/register build/src/server.js",
        "start:uat": "cross-env NODE_ENV=uat node -r tsconfig-paths/register build/src/server.js",
        "start:prod": "cross-env NODE_ENV=prod node -r tsconfig-paths/register build/src/server.js",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint --fix src/**/*.ts",
        "lint:check": "eslint src/**/*.ts",
        "pretty": "prettier --write \"src/**/*.ts\" ",
        "pretty:check": "prettier --check \"src/**/*.ts\"",
        "check-deps": "npm outdated",
        "check-security": "npm audit --audit-level=moderate",
        "check-all": "npm run lint:check && npm run pretty:check && npx tsc --noEmit && npm run build && npm run check-deps && npm run check-security",
        "prepare": "husky install",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "cross-env DB_MIGRATING=true tsx src/database/migrate.ts",
        "db:migrate:dev": "cross-env DB_MIGRATING=true NODE_ENV=dev tsx src/database/migrate.ts",
        "db:migrate:qas": "cross-env DB_MIGRATING=true NODE_ENV=qas tsx src/database/migrate.ts",
        "db:migrate:uat": "cross-env DB_MIGRATING=true NODE_ENV=uat tsx src/database/migrate.ts",
        "db:migrate:prod": "cross-env DB_MIGRATING=true NODE_ENV=prod tsx src/database/migrate.ts",
        "db:seed": "cross-env DB_SEEDING=true tsx src/database/seed.ts",
        "db:seed:dev": "cross-env DB_SEEDING=true NODE_ENV=dev tsx src/database/seed.ts",
        "db:seed:qas": "cross-env DB_SEEDING=true NODE_ENV=qas tsx src/database/seed.ts",
        "db:seed:uat": "cross-env DB_SEEDING=true NODE_ENV=uat tsx src/database/seed.ts",
        "db:seed:prod": "cross-env DB_SEEDING=true NODE_ENV=prod tsx src/database/seed.ts",
        "db:init": "npm run db:generate && npm run db:migrate && npm run db:seed"
    },
    "author": "Metayb",
    "license": "Apache-2.0",
    "dependencies": {
        "@azure/storage-blob": "^12.27.0",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "axios": "^1.11.0",
        "bcryptjs": "^3.0.3",
        "chalk": "^5.6.2",
        "chokidar": "^4.0.3",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dayjs": "^1.11.18",
        "dotenv": "^17.2.1",
        "drizzle-orm": "^0.44.4",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "http-status-codes": "^2.2.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^2.0.2",
        "pg": "^8.16.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "typescript": "^5.1.6",
        "uuid": "^13.0.0",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0",
        "zod": "^4.0.17"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.13",
        "@types/express": "^5.0.5",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/mime-types": "^3.0.1",
        "@types/multer": "^2.0.0",
        "@types/node": "^24.10.0",
        "@types/pg": "^8.15.5",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "cross-env": "^10.1.0",
        "drizzle-kit": "^0.31.4",
        "eslint": "^9.39.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.0",
        "shx": "^0.4.0",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.20.4",
        "typescript-eslint": "^8.46.2"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix --max-warnings 0",
            "prettier --write"
        ]
    },
    "overrides": {
        "esbuild": ">=0.24.3"
    }
}
